                                { page: "428~441ìª½", q: "06-1", a: "64" }, { page: "428~441ìª½", q: "06-2", a: "10" }, { page: "428~441ìª½", q: "06-3", a: "144" }, { page: "428~441ìª½", q: "06-4", a: "-4" },
                                { page: "428~441ìª½", q: "07-1", a: "7" }, { page: "428~441ìª½", q: "07-2", a: "128" }, { page: "428~441ìª½", q: "07-3", a: "13/8" },
                                { page: "446~449ìª½", q: "08-1", a: "í’€ì´ ì°¸ì¡°" }, { page: "446~449ìª½", q: "08-2", a: "ãˆ (k+1)Ã—2^(k+1) ãˆ k" }, { page: "446~449ìª½", q: "08-3", a: "í’€ì´ ì°¸ì¡°" },
                                { page: "446~449ìª½", q: "09-1", a: "í’€ì´ ì°¸ì¡°" }, { page: "446~449ìª½", q: "09-2", a: "ãˆ 2k+2 ãˆ 4k ãˆ 1" }
                            ]
                        },
                        {
                            type: "exercise", label: "ì¤‘ë‹¨ì› ì—°ìŠµ", data: [
                                { page: "450~455ìª½", q: "01", a: "-9" }, { page: "450~455ìª½", q: "02", a: "-11" }, { page: "450~455ìª½", q: "03", a: "1/12" }, { page: "450~455ìª½", q: "04", a: "54" },
                                { page: "450~455ìª½", q: "05", a: "32" }, { page: "450~455ìª½", q: "06", a: "91" }, { page: "450~455ìª½", q: "07", a: "37" }, { page: "450~455ìª½", q: "08", a: "38" },
                                { page: "450~455ìª½", q: "09", a: "-1/9" }, { page: "450~455ìª½", q: "10", a: "8" }, { page: "450~455ìª½", q: "11", a: "49" }, { page: "450~455ìª½", q: "12", a: "â‘£" },
                                { page: "450~455ìª½", q: "13", a: "61" }, { page: "450~455ìª½", q: "14", a: "6" }, { page: "450~455ìª½", q: "15", a: "56" }, { page: "450~455ìª½", q: "16", a: "8/3" },
                                { page: "450~455ìª½", q: "17", a: "19" }, { page: "450~455ìª½", q: "18", a: "23" }, { page: "450~455ìª½", q: "19", a: "162" }, { page: "450~455ìª½", q: "20", a: "54" }
                            ]
                        }
                    ]
                }
            ]
        };

        // --- 2. State & Init ---
        let currentUnit = "I";
        let searchQuery = "";

        const unitNav = document.getElementById('unitNav');
        const contentGrid = document.getElementById('contentGrid');
        const currentUnitTitle = document.getElementById('currentUnitTitle');
        const searchInput = document.getElementById('globalSearch');
        const noResults = document.getElementById('noResults');

        // --- 3. Render Functions ---

        // Render Unit Tabs
        const renderNav = () => {
            unitNav.innerHTML = "";
            db.units.forEach(unit => {
                const btn = document.createElement('button');
                const isActive = unit.id === currentUnit;
                btn.className = `whitespace-nowrap px-6 py-3 font-medium text-sm transition-all duration-200 border-b-2 ${isActive ? 'border-stone-800 text-stone-900 bg-white' : 'border-transparent text-stone-500 hover:text-stone-700 hover:bg-stone-50'
                    }`;
                btn.textContent = unit.title;
                btn.onclick = () => setUnit(unit.id);
                unitNav.appendChild(btn);
            });
        };

        // Render Dashboard Content
        const renderContent = () => {
            contentGrid.innerHTML = "";
            let hasResults = false;

            const unitInfo = db.units.find(u => u.id === currentUnit);
            currentUnitTitle.textContent = unitInfo.title;

            const filteredChapters = db.chapters.filter(ch => ch.unit === currentUnit);

            filteredChapters.forEach(chapter => {
                // Filter questions based on search query
                const filteredSections = chapter.sections.map(sec => {
                    const filteredData = sec.data.filter(item => {
                        const qMatch = item.q.toLowerCase().includes(searchQuery.toLowerCase());
                        const pMatch = item.page.toLowerCase().includes(searchQuery.toLowerCase());
                        const aMatch = item.a.toLowerCase().includes(searchQuery.toLowerCase());
                        return searchQuery === "" || qMatch || pMatch || aMatch;
                    });
                    return { ...sec, data: filteredData };
                }).filter(sec => sec.data.length > 0);

                if (filteredSections.length > 0) {
                    hasResults = true;
                    const card = createChapterCard(chapter, filteredSections);
                    contentGrid.appendChild(card);

                    // Render Chart (small delay to ensure DOM is present)
                    setTimeout(() => renderChart(chapter.id, chapter.sections), 0);
                }
            });

            if (!hasResults && searchQuery !== "") {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
            }
        };

        // Create individual chapter card
        const createChapterCard = (chapter, sections) => {
            const card = document.createElement('div');
            card.className = "bg-white rounded-xl shadow-sm border border-stone-200 overflow-hidden flex flex-col";

            // Card Header
            card.innerHTML = `
                <div class="p-5 border-b border-stone-100 bg-stone-50/50 flex justify-between items-start">
                    <div>
                        <h3 class="font-bold text-lg text-stone-800">${chapter.title}</h3>
                        <p class="text-xs text-stone-500 mt-1">ì´ ${sections.reduce((acc, sec) => acc + sec.data.length, 0)} ë¬¸í•­ í‘œì‹œ ì¤‘</p>
                    </div>
                    <div class="hidden sm:block">
                        <div class="chart-container">
                             <canvas id="chart-${chapter.id}"></canvas>
                        </div>
                    </div>
                </div>
                
                <!-- Internal Tabs -->
                <div class="flex border-b border-stone-100 px-5 pt-2 gap-4 text-sm font-medium" id="tabs-${chapter.id}">
                    ${sections.map((sec, idx) => `
                        <button class="pb-2 ${idx === 0 ? 'tab-active' : 'tab-inactive'}" 
                                onclick="switchTab('${chapter.id}', '${sec.type}')" 
                                data-tab-group="${chapter.id}" data-tab-target="${sec.type}">
                            ${sec.label} <span class="text-xs bg-stone-100 px-1.5 py-0.5 rounded-full ml-1 text-stone-500">${sec.data.length}</span>
                        </button>
                    `).join('')}
                </div>

                <!-- Tables -->
                <div class="flex-grow p-0 relative min-h-[300px]">
                    ${sections.map((sec, idx) => `
                        <div id="content-${chapter.id}-${sec.type}" class="${idx === 0 ? 'block' : 'hidden'} h-full max-h-[400px] overflow-y-auto custom-scroll">
                            <table class="w-full text-sm text-left">
                                <thead class="text-xs text-stone-500 uppercase bg-stone-50 sticky top-0">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 w-1/4">ë²ˆí˜¸ (í˜ì´ì§€)</th>
                                        <th scope="col" class="px-6 py-3 w-3/4">ì •ë‹µ</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-stone-100">
                                    ${sec.data.map(item => `
                                        <tr class="bg-white hover:bg-orange-50/30 transition-colors">
                                            <td class="px-6 py-4 font-medium text-stone-900 whitespace-nowrap">
                                                <span class="text-stone-800 font-bold mr-2">${item.q}</span>
                                                <span class="text-stone-400 text-xs">${item.page}</span>
                                            </td>
                                            <td class="px-6 py-4 font-mono text-stone-600">
                                                ${formatMath(item.a)}
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    `).join('')}
                </div>
            `;
            return card;
        };

        // --- 4. Chart Logic ---
        const renderChart = (id, sections) => {
            const ctx = document.getElementById(`chart-${id}`);
            if (!ctx) return;

            // Calculate real distribution from original data (not filtered)
            const labels = sections.map(s => s.label);
            const data = sections.map(s => s.data.length);

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: ['#E7E5E4', '#D6D3D1', '#A8A29E'], // Stone 200, 300, 400
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return ` ${context.label}: ${context.raw}ë¬¸í•­`;
                                }
                            }
                        }
                    },
                    cutout: '70%'
                }
            });
        };

        // --- 5. Interactions ---
        window.setUnit = (id) => {
            currentUnit = id;
            renderNav();
            renderContent();
        };

        window.switchTab = (chapterId, type) => {
            // Update Tab Styles
            const tabs = document.querySelectorAll(`[data-tab-group="${chapterId}"]`);
            tabs.forEach(tab => {
                if (tab.dataset.tabTarget === type) {
                    tab.classList.remove('tab-inactive');
                    tab.classList.add('tab-active');
                } else {
                    tab.classList.remove('tab-active');
                    tab.classList.add('tab-inactive');
                }
            });

            // Toggle Content
            const container = document.getElementById(`contentGrid`);
            const contents = container.querySelectorAll(`[id^="content-${chapterId}-"]`);
            contents.forEach(content => {
                if (content.id === `content-${chapterId}-${type}`) {
                    content.classList.remove('hidden');
                    content.classList.add('block');
                } else {
                    content.classList.remove('block');
                    content.classList.add('hidden');
                }
            });
        };

        // Search Debounce
        let timeout = null;
        searchInput.addEventListener('input', (e) => {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                searchQuery = e.target.value.trim();
                renderContent();
            }, 300);
        });

        // Initialize
        renderNav();
        renderContent();

    </script>
</body>

</html>
